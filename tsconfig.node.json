{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* Emiss√£o de arquivos */
    "noEmit": false,            // gera arquivos JS mesmo com erros
    "skipLibCheck": true,       // ignora checagem de tipos de bibliotecas
    "noEmitOnError": false,     // permite build mesmo com erros de TS

    /* Relaxa regras estritas */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
